<%- layout("/layouts/boilerplate") %>
    <style>
      .filters {
         display: flex;
         flex-wrap: wrap;
         align-items: center;
      }
      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
      }
      .filter:hover {
        opacity: 1;
        cursor: pointer;
      }
      .filter p {
        font-size: 0.8rem;
      }

      .tax-info {
        display: none;
      }

      .tax-togle {
        border: 1px solid black;
        border-radius: 2.5rem;
        height : 3.5rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
      }
    </style>

    <div class="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <P>Tranding</P>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <P>Room</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <P>Iconic Cities</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <P>Mountain</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <P>Faram</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <P>Amazing poole</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <P>Arcitc</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <P>Camping</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <P>Ship</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <P>Igloo</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <P>Arcitc</P>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tower-observation"></i>
        <P>Tower Top</P>
      </div>
      <div class="tax-togle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after taxse</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md2 row-cols-sm-1">
      <% for(let listing of allListings) {%>
      <a href="/Listings/<%=listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%=listing.image.url %>" class="card-img-top" alt="listing_image"  style="height: 20rem;">  <div class="card-img-overlay"></div>

          <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text">
             <b><%=listing.title %></b> 
             &#8377; <%=listing.price.toLocaleString("en-IN") %> /night
             <i class="tax-info">&nbsp; &nbsp; +18% GST </i>
            </p>
          </div>
        </div> 
      </a>
        <% } %>
    </div>
    
    <!-- <ul>
      <% for(let listing of allListings) {%>
        <li><a href="/Listings/<%=listing._id %>"><%=listing.title %></a></li>
      <% } %>
    </ul>
</body> -->`

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",() =>{
    let taxinfo = document.getElementsByClassName("tax-info")
    for (info of taxinfo){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else {
        info.style.display = "none";
      }
    }
  });
</script>

